<!DOCTYPE html>
@{
    ViewBag.Title = "Israel's Pet Shop";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/styles/bootstrap.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/x-icon" href="/Images/favicon.ico.png">




    <style>


       
        .animal-row:hover {
            background-color: antiquewhite;
        }
    

        td, th {
            border: none;
            padding: 8px;
        }

        .td, .tr, .th:hover{
                background-color: antiquewhite;
        }
   

        catalog-card {
            max-height: 250px;
            overflow-y: auto;
        }


        ul.comment-list li {
            margin-bottom: 10px;
        }


        table {
            border-spacing: 0px 5px;
            border: 2px solid black;
        }

       
       

        th, td {
            border: 1px solid black;
            padding: 10px;
        }


        favIcon {
            width: 32px;
            height: 32px;
        }


        img {
            width: 100%;
            height: 100%;
            max-height: 200px;
        }

        .card {
            margin-bottom: 20px;
            border: 1px solid black;
            border-radius: 4px;
            box-shadow: 0 2px 2px rgba(0,0,0,.1);
            transition: box-shadow 0.3s ease-in-out;
            height: 100%;
        }

            .card:hover {
                box-shadow: 0 4px 8px rgba(0,0,0,.2);
                background-color:antiquewhite;
            }

        .card-header {
            font-weight: bold;
        }

        .card-footer {
            background-color: #f9f9f9;
        }

        .btn-add-new{
            margin-left: 1075px;
        }

        .btn-add-new:hover{
            background-color:antiquewhite;
        }

        .selected-category {
            font-weight: bold;
            color: #007bff;
        }

        h1, h2 {
            font-family: "Brush Script MT";
            background-color:black;
            color: antiquewhite;
            text-align: center;
        }

        body {
            background-color:burlywood;
        }


        .nav-item a.active {
            font-weight: bold;
            color: black;
        }

        .submit-button {
            background-color:antiquewhite;
            border-collapse: collapse;
            cursor: pointer;
        }

       .admin-table:hover{
            background-color:antiquewhite;
            border-collapse: collapse;
       }

       .new-animal-form{
          margin-left:300px;margin-right:300px;text-align:center;
       }
        




    </style>
</head>
<body>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["Action"]!.ToString() == "Home" ? "active" : "")" href="/PetShop/Home">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["Action"]!.ToString() == "Catalog" ? "active" : "")" href="/PetShop/Catalog">Catalog</a>
        </li>

        <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["Action"]!.ToString() == "Administrator" ? "active" : "")" href="/PetShop/Administrator">Administrator</a>
        </li>

    </ul>







    <h1 class="text-center" style="font-size:80px"> The Best Pet Shop In Town</h1>


    <div>
        @RenderBody()
    </div>

    <script src="~/scripts/jquery.js"></script>
    <script src="~/scripts/popper.js"></script>
    <script src="~/scripts/bootstrap.js"></script>
</body>
</html>
