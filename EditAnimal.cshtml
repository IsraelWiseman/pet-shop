@model PetShopWebsite.Models.Animal
@{
    Layout = "_PetShopLayout";
}

<hr />
<div class="row">
    <div class="col-md-4">
      
            <form asp-action="EditAnimal" asp-route-AnimalId="@Model.AnimalId" asp-route-PictureName="@Model.PictureName" 
            enctype="multipart/form-data" method="post">
           
          

            <div class="form-group" style="text-align:center; margin-left:400px; width:500px">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" name="Name" autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align:center; margin-left:400px; width:500px">
                <label asp-for="Age" class="control-label">Age</label>
                <input asp-for="Age" class="form-control" manifest="name=Age"/>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align:center; margin-left:400px; width:500px">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" rows="4" class="form-control" name="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group" style="text-align:center; margin-left:400px; width:500px">
                <label asp-for="CategoryId">Category:</label>
                <select asp-for="CategoryId" class="form-control" name="CategoryId">
                    <option value="">-- Select Category --</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.CategoryId">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group" style="text-align:center; margin-left:400px; width:500px">
                <label asp-for="PictureName" class="control-label"></label>
                <input type="file" asp-for="PictureName" class="form-control-file" />
                <span asp-validation-for="PictureName" class="text-danger"></span>
            </div>

            
            <div class="form-group" style="text-align:center; margin-left:400px; width:500px">
                <button type="submit" class="btn btn-light">Save</button>
            </div>
            <div class="col-md-8" style="text-align:center; margin-left:400px; width:500px">
                <img src="@Url.Content($"~/Images/{Model.PictureName}")" alt="@Model.Name" />
            </div>
            </form>
         



    </div>
    
</div>
